make luaidl.c
  :	lua/luaidl/lex.lua
    lua/luaidl/pre.lua
    lua/luaidl/sin.lua
    lua/luaidl.lua
  : preloader.pre-compile
  : <search>$(here)
  ;

lib oil
  : oil.c
    /lua//lua
  : <target-os>windows,<link>shared:<linkflags>"/def:$(here)/oil.def"
    <include>src
  ;
explicit oil ;

lib luaidl
  : luaidl.c
    oil
    /lua//lua
  : <target-os>windows,<link>shared:<linkflags>"/def:$(here)/luaidl.def"
  :
  : <include>.
  ;
explicit luaidl ;

install stage
  : oil
    luaidl
  : <location>install
  ;
  