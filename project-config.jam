# -*- coding: iso-8859-1-unix -*-

import os ;

path-constant here : . ;

local lua-install-path = [ os.environ LUA_INSTALL_PATH ] ;
if ! $(lua-install-path)
{
  lua-install-path = "$(here)/../../install/lua" ;
}

project lua
  : requirements <include>$(lua-install-path)/include ;

lib lua
  : 
  : <search>$(lua-install-path)/lib
  ;

lib lua
  : 
  : <name>lua52
    <target-os>windows
    <search>$(lua-install-path)/lib
  ;
